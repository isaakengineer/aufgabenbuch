{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "aufgabenbuch",
  "version": "0.1.0",
  "identifier": "com.equipage.aufgabenbuch",
  "build": {
    "beforeDevCommand": "deno run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "deno run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
      	"decorations": false,
        "title": "Aufgabenbuch",
        "width": 640,
        "height": 820
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "queries/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
